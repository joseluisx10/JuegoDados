<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:background="#3F51B5"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:text="DadoPlay"
            android:textAlignment="center"
            android:textColor="#FAF5F5"
            android:textSize="24sp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:background="#0C86E8"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <TextView
            android:id="@+id/txtemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:paddingLeft="20dp"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btncocktail"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:onClick="cocktailApi"
                android:text="Ver Cocktail" />

            <Button
                android:id="@+id/button1"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:onClick="downloadOnClick"
                android:text="Ver Reglas" />

            <Button
                android:id="@+id/btn_returnjuego"
                android:layout_width="109dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:onClick="returnJuegoOnClick"
                android:text="Seguir jugando" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="650dp"
            android:background="#3F51B5"
            android:translationX="0dp"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>